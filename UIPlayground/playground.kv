#:kivy 2.1.0

<Progress>:
    progress_bar: progress_bar
    progress_summary: progress_summary
    progress_text: progress_text
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Button:
            id: go_button
            size_hint_y: .15
            text: "Go"
            on_release: root.start_clock()
        Label:
            size_hint_y:.05
            halign: 'center'
            text: "Progress"
        ProgressBar:
            id: progress_bar
            #min: 0
            #max: app.input_files
            max: 1000.0
            #value: 22
            #value: 0
            pos_hint: {'x': .1}
            size_hint_x: .8
            size_hint_y: .1
        BoxLayout:
            id: progress_text
            orientation: 'horizontal'
            TextInput:
                id: progress_summary
            TextInput:
                id: progress_text
        Button:
            size_hint_y: .1
            text: "Abort"

