#:kivy 2.1.0

<CheckBoxItem>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    id: _container
    text: 'Initial'
    selected: False
    callback: None
    size_hint: 1.0, 0.1

    BoxLayout:
        orientation: 'horizontal'
        CheckBox:
            size_hint: 0.1, 1.0
            pos_hint: {'right': 1, 'center': 0.5}
            active: _container.selected
            on_active: root.log_hit(self.active)

        Label:
            size_hint: 0.9, 1.0
            pos_hint: {'center': 1}
            halign: 'left'
            text: _container.text



<ConfigScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.5
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

<ProcessingScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 0, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    Button:
        text: 'GoodBye!!'
        size_hint: 0.8, 0.1
        pos_hint: {'left': 0, 'top': 1}

    Button:
        text: 'bb'
        size_hint: 0.2, 0.1
        pos_hint: {'right': 1, 'top': 1}

    Button:
        text: 'Solong!!'
        size_hint: 0.8, 0.1
        pos_hint: {'left': 0.8, 'top': .9}
    Button:
        text: 'cc'
        size_hint: 0.2, 0.1
        pos_hint: {'right': 1, 'top': .9}
