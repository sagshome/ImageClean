# yellow = background_color: utils.get_color_from_hex('#E9F20D')
# red = background_color: utils.get_color_from_hex('#FF0000')
# green = background_color: utils.get_color_from_hex('#00FF00')

<CheckBoxItem>:
    text: ''
    callback: None
    check_value: False
    size_hint: 1.0, None
    height: 50
    BoxLayout:
        orientation: 'horizontal'
        CheckBox:
            size_hint_x: 0.5
            pos_hint: {'right': 1, 'center': 0.5}
            active: root.check_value
            on_active: root.selected(self)
        Label:
            padding: 20, 15
            size_hint_x: 0.85
            pos_hint: {'center': 1}
            texture_size: self.size
            text_size: self.size
            halign: 'left'
            valign: 'center'
            text: root.text

<FolderSelector>:
    show_clear: 0
    input_button_text: ''
    get_label_value: ''
    load_callback: None
    clear_callback: None
    default_scrolling: False

    size_hint_y: .3
    text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: root.input_button_text
            background_color: utils.get_color_from_hex('#E9F20D')
            width: 100
            size_hint: 0.75, 1.0
            #pos_hint: {'center': 1}
            on_press: root.show_load()
        ScrollView:
            do_scroll_x: False
            do_scroll_y: root.default_scrolling
            Label:
                text: root.input_label_value
                height: self.texture_size[1]
                text_size: self.width, None

                size_hint_y: None
                valign: 'center'
                padding: 10, 15
        Button:
            opacity: root.show_clear
            text: "Clear"
            size_hint: 0.2, 1.0
            background_color: utils.get_color_from_hex('#99CCFF')
            on_press: root.clear_callback()

<ActionBox>:
    #size_hint: 1.0, .2
    orientation: 'horizontal'
    Button:
        text: "Go"
        background_color: utils.get_color_from_hex('#00FF00')
        on_press: root.start_processing()
    Button:
        text: "Cancel"
        background_color: utils.get_color_from_hex('#FF0000')
        on_release: root.parent.exit(1)

<Main>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .2
        Button:
            text: 'Help'
            background_color: utils.get_color_from_hex('#00FF00')
            size_hint: 0.3, 1.0
        Button:
            text: ''
            opacity: 0
        Button:
            background_color: utils.get_color_from_hex('#00FF00')
            text: 'About'
            size_hint_x: 0.3
    FolderSelector:
        input_button_text: 'Select Input Folder'
        get_label_value: self.get_input()
        load_callback: self.set_input
    FolderSelector:
        input_button_text: 'Change Output Folder'
        get_label_value: self.get_output()
        load_callback: self.set_output
        show_new_button: 1
    CheckBoxItem:
        text: "Recreate - recreate output folder - Forces a backup of any previous file!"
        check_value: False
        callback: self.set_recreate
    FolderSelector:
        size_hint_y: 1
        default_scrolling: True
        show_clear: 1
        clear_callback: self.clear_skip_name
        input_button_text: 'Folder names to ignore'
        get_label_value: self.get_skip_name()
        load_callback: self.set_skip_name
        allow_multiselect: True
    FolderSelector:
        size_hint_y: 1
        default_scrolling: True
        show_clear: 1
        clear_callback: self.clear_ignore_folder
        input_button_text: 'Input Folders to ignore'
        get_label_value: self.get_ignore_folder()
        load_callback: self.set_ignore_folder
        allow_multiselect: True
    ActionBox:
        size_hint_y: 0.25

<Progress>:
    progress_bar: progress_bar
    progress_summary: progress_summary
    progress_text: progress_text
    exit_button: exit_button
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Label:
            size_hint_y:.05
            halign: 'center'
            text: "Progress"
        ProgressBar:
            id: progress_bar
            #max: app.input_files
            pos_hint: {'x': .1}
            size_hint_x: .8
            size_hint_y: .1
        BoxLayout:
            id: progress_text
            orientation: 'horizontal'
            TextInput:
                size_hint_x: .4
                id: progress_summary
            TextInput:
                id: progress_text
        Button:
            id: exit_button
            size_hint_y: .1
            text: "Abort"
            background_color: utils.get_color_from_hex('#FF0000')
            on_release:
                root.abort()


<DismissDialog>:
    # Reusable dialog to display warnings/errors/info
    BoxLayout:

        #pos_hint: {'right': 1, 'center': 0.5}
        orientation: 'vertical'
        Label:
            text: root.error_text
        Button:
            #size_hint: 1, 0.2
            text: "Dismiss"
            background_color: utils.get_color_from_hex('#0E2BF1')
            on_release:
                root.dismiss()

<LoadDialog>:
    filechooser: file_chooser
    newbutton: new_button
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: file_chooser
            dirselect: True
            filters: ['']  # Only show folders
        BoxLayout:
            # force 30px for the action buttons
            size_hint_y: None
            #height: 30
            Button:
                text: "Select"
                on_release: root.load(file_chooser.path, file_chooser.selection)
            Button:
                id: new_button
                text: "New"
                on_release: root.new(file_chooser.path, file_chooser.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()
